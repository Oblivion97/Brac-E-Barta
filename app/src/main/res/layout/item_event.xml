<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="BRACathon II"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/event_short_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:padding="10dp"
                android:text="sssssss"
                android:visibility="visible" />

            <TextView
                android:id="@+id/event_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="sssssss"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="10dp">



                        <TextView
                            android:id="@+id/tv_event_org_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post By "
                            android:textAlignment="center"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 April 2017" />
                        <TextView
                            android:id="@+id/tv_event_loc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 April 2017" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e0e0e0" />

                    <TextView
                        android:id="@+id/layout_event_explore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:padding="5dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:text="Expand"
                        android:textAlignment="center"
                        android:textColor="#894499" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KeyNote"
                    android:paddingBottom="5dp"
                    android:paddingTop="2dp"
                    android:paddingLeft="15dp"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:id="@+id/keynote"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to Calender"
                    android:background="#272339"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    android:padding="2dp"
                    android:id="@+id/add_to_calender"
                    />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>